{
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": false,
    "allowImportingTsExtensions": true,
    "noEmit": true,     
    "strict": true,
    "skipLibCheck": true,
    "rootDir": ".",
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/**/*"]
}